<h1>My WatchList</h1>

<br />
<div class="constainer row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Film List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Films" class="btn btn-info form-control text-white">
            Add Film to WatchList
        </a>
    </div>
    <div class="col-12 border p-5">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Year</th>
                    <th>Director</th>
                    <th>Stars</th>
                    <th>IMDBId</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/filmList.js"></script>
}